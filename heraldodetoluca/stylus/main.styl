.lomas
	width 300px
	display none
	overflow hidden
	& ul
		padding 0
		margin 0
	& li
		list-style none
		border-bottom 1px dotted black
		padding-bottom 8px
		padding-top 8px
		font-size 12px
		float left
	& .numero
	& .contenido
	& figure
		display inline-block
		vertical-align middle
	& .numero 
		width 15px
		vertical-align middle
		color color_azul
		font-weight bold
	& .contenido
		width 179px
	& figure
		margin 0
		padding 5px
		width 90px


.navegador
	& ul
		margin 0
		padding 0
		list-style none
	& li
		display inline-block
		vertical-align top
		& > a
			color black
	&.secundario
		font-size 12px
		font-weight bold
		height 20px
		text-align right
		text-transform uppercase
		& > ul li
			margin-left 1em
	&.principal
		border-bottom 3px solid color_azul
		border-top 1px solid color_azul
		font-size 16px
		text-align center
		z-index -1
		& > ul li
			border-left 1px solid color_azul
			display block
			float left
			padding 5px
			position relative
			& a
				color black
				display inline-block
				font-size 15px
				text-transform uppercase
				text-align center
				font-family 'Verdana'
				&:hover
				&.active
					color color_azul
			&:first-child
				border-left none
				padding-left 3px
			&:last-child
				padding-right 0px
		& ul.submenu
			top 27px
			display none
			margin 0px
			opacity 0
			padding-left 0px
			padding-top 10px
			position absolute
			right 0px
			transition all 1s ease
			min-width 100px
			z-index 9999
			& > li
				float left
				background color_azul
				padding 10px
				width 100%
				box-sizing border-box
				border-bottom 1px solid color_azul_claro
				& a
					color white
					display block
					text-align left
					text-transform uppercase
			& > li:last-child
				border-bottom none
		& ul.submenu > li:first-child > a:before
			bottom 100%
			right 10px
			border solid transparent
			content " "
			height 0
			width 0
			position absolute
			border-bottom-color color_azul
			border-width 5px
		& > ul.menu li:hover ul.submenu
			display block
			opacity 1

