@import 'normalize.styl'

@import 'fonts.styl'



gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B 


a
	text-decoration none

body
	font-size 16px
	font-family 'Varela Round', sans-serif

figure
	margin 0

img
	vertical-align top
	

//buttons
.button-menu
	position absolute
	top 50%
	left 1.5em 
	margin-top -10px
	color gris_oscuro


.container
	padding 1.4rem
	font-size 0
	text-align center

//oocss clases

.border-bottom
	border-bottom 1px solid gris_claro 
	
.actions
	position absolute
	bottom 0px
	background rgba(black,0.3)
	left 0
	right 0
	

.action
	color white
	margin-right .5em
	font-size 1.2em 
	&:last-child
		margin-right 0
	&.gray 
		color gris_claro 
		

.name
	color gris_oscuro

.menu
	display none

.relative
	position relative
	
.padding
	padding 1em
	
.padding-tb
	padding 1em 0 
	
.round
	border-radius 50%
	overflow hidden

.center-block
	margin 0 auto

.wrap
	width 1000px	

.right-text
	text-align right
	
.left
	float left
	
.right 
	float right

.center-text
	text-align center
	

.author
	color gris_claro

.progress
	margin 1em 0 
	position relative 
	
	.min 
	.max 
		font-size .8em 
		position absolute 
		top -5px 
		
	.min 
		left 0
	.max 
		right 0 
		
	.total
		height 5px
		background gris_claro 
		width 75% 
		border-radius 5px 
		margin 0 auto 
		
	.state
		height 5px 
		background rojo 
		width 30% 
		border-radius 5px
		position relative 
		
	.circle
		background gris_oscuro 
		height 10px 
		width 10px 
		border-radius 50%
		position absolute 
		right 0 
		top -2px 
		

.header
	height 3.5em
	& a.button-menu
		display block
	& .title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:ntd-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em
		
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
	

@media screen and (min-width: 480px)
	.song
		&:ntd-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
			
@media screen and (min-width: 1000px)
	.button-menu
		display none
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		overflow hidden
		padding 1.3em 0
	.avatar
		height 38px
		width 38px
	.username
		color gris_claro
		margin-left .5em
		position relative
		top 9px
		&:after
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block
			margin-left .4em
			